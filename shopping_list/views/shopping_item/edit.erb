<h1> Edit form</h1>

<form action="/shopping_item/<%= @id %>" method="POST">


	<label for="title">Title: </label>
	<input type="text" name="title" value="<%= @shopping[:title] %>">


	<label for="body">Body: </label>
	<textarea name="body"><%= @shopping[:body] %></textarea>

	<input type="hidden" name="_method" value="PUT">

	<input type="submit" name="update">


</form>
